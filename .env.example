# PostgreSQL Configuration
PG_HOST=postgres
PG_PORT=5432
PG_DB=nyc_taxi
PG_USER=taxi_user
PG_PASSWORD=your_secure_password_here
PG_SCHEMA_RAW=raw
PG_SCHEMA_ANALYTICS=analytics

# Ingestion Parameters
# NOTE: Currently configured for year 2020 only for faster evaluation
# To process all years (2015-2025), change to: YEARS=2015,2016,2017,2018,2019,2020,2021,2022,2023,2024,2025
YEARS=2020
SERVICES=yellow,green
RUN_ID=pset4_run_001
NYC_TLC_BASE_URL=https://d37ci6vzurychx.cloudfront.net/trip-data

# OBT Builder Parameters
OBT_MODE=full
# NOTE: Currently configured for year 2020 only
# To process all years, change to: OBT_YEAR_START=2015, OBT_YEAR_END=2025
OBT_YEAR_START=2020
OBT_YEAR_END=2020
OBT_OVERWRITE=false

# Spark Configuration (optional overrides)
SPARK_DRIVER_MEMORY=8g
SPARK_EXECUTOR_MEMORY=6g
SPARK_DRIVER_MAXRESULTSIZE=2g

# ML Configuration
ML_RANDOM_SEED=42
ML_TEST_SIZE=0.2
ML_VAL_SIZE=0.2
